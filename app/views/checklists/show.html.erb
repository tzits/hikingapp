<% @sql_list.each do |i| %>
<% @checklist_item = ChecklistItem.find(i.checklist_item_id) %>
<% if ((@checklist_item.checklist.id.to_s) == (params[:id].to_s)) %>
<div class='container'>
<h4><%= form_for @checklist_item do |f| %>
<%= f.check_box :checked %>
<%= @checklist_item.name %></h4>
<span class='advice' id='advice-<%= @checklist_item.id %>' value='<%= @checklist_item.id %>'><%= @checklist_item.advice %></span>
<% end %>

</div>
<% end %>
<% end %>
