<div class="col-sm-12 col-lg-12"><h3> <%= category.name %></h3></div>
 <% category.items.each do |i| %>
 <div class="col-sm-4 col-lg-4">
    <%= i.image %>
    <p><%= i.name %></p>
    <button class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-<%=i.id%>">See More</button>
  </div>

 <div id="modal-<%=i.id%>" class="modal fade" role="dialog">
   <div class="modal-dialog">
 <div class="modal-content">
   <div class="modal-header">
     <button type="button" class="close" data-dismiss="modal">&times;</button>
     <h4 class="modal-title"><%= i.brand %> <%= i.name %></h4>
   </div>
   <div class="modal-body">
<%= i.image %>
<%= i.brand %> <%= i.name %>
<%= i.size %> <%= i.unit %>
<%= i.weight %>
<%= form_for (UserListCategoryItem.new) do |f| %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :category_id, :value => category.id %>
<%= f.hidden_field :list_id, :value => params[:id] %>
<%= f.hidden_field :item_id, :value => i.id %>
<%= f.submit 'Add to Gear', class: "btn btn-success", id: "add" %>
<% if list.is_finished(category.id) %>
<%= link_to 'Skip', users_path(current_user), class: "btn btn-danger" %>
<% else list.is_finished(category.id)==false %>
<%= link_to 'Skip', category_path(list.id,list.next(category.id)), class: "btn btn-warning" %>
<% end %>
<% end %>
</div>
</div>
</div>

</div>
<% end %>
