<div class="small-4 large-4 columns"><%= image_tag @user.avatar.url(:medium) %></div>

<div class="small-4 large-4 columns">
<% if @user.trail_name != "" %>
<h1><%= @user.trail_name %></h1>
<% else %>
<h1><%= @user.first_name.capitalize %></h1>
<% end %>
<h3><%= @user.experience %></h3>
<h3><%=mail_to @user.email, 'Contact' %>
</div>
<div class="small-4 large-4 columns">
  <%= @user.bio %><br>
<%= link_to 'Edit', edit_user_path(@user) %>
</div>
<div class="small-12 large-12 columns"><%= link_to 'Create New Gear List', lists_path, class:"button large" %></div>

<div class="small-12 large-12 columns">
<% if @sql_hike.count > 0 %>
  <h2>Hiking List</h2>
  <% end %>
<% @sql_hike.each do |l| %>
  <div class="small-2 large-2 column"><%= Item.find(l.item_id).name %></div>
<% end %>
</div>
<div class="small-12 large-12 columns">
  <% if @sql_bike.count > 0 %>
    <h2>Biking List</h2>
    <% end %>
<% @sql_bike.each do |l| %>
    <div class="small-2 large-2 column"><%= Item.find(l.item_id).name %></div>
<% end %>
</div>
<div class="small-12 large-12 columns">
  <% if @sql_canoe.count > 0 %>
    <h2>Canoe List</h2>
    <% end %>
<% @sql_canoe.each do |l| %>
    <div class="small-2 large-2 column"><%= Item.find(l.item_id).name %></div>
<% end %>
</div>
